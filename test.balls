header name "Bob's epic adventure";
header languages "english" "russian";

character nika "test_assets/illyustraciya_bez_nazvaniya_2.png" normal
               "test_assets/illyustraciya_bez_nazvaniya_1.png" happy
               "test_assets/illyustraciya_bez_nazvaniya.png"   shy;

character nikab "test_assets/illyustraciya_bez_nazvaniya_2.png" normal
                "test_assets/illyustraciya_bez_nazvaniya_1.png" happy
                "test_assets/illyustraciya_bez_nazvaniya.png"   shy;

flag my_flag      bool false;
flag other_flag   int  123;
flag other_flag_a int  0;
flag other_flag_b int  11;

scene first_scene "My first epic scene" {
    say "inside first scene";

    spawn nika happy 200 200;
    say "spawning a happy sprite!";

    spawn nika shy 200 200;
    say "spawning a shy sprite!";

    spawn nika normal 200 200;
    say "spawning a normal sprite!";

    spawn nikab happy 600 200;
    say "spawning a second sprite!";

    say "This is a really long line This is a really long line This is a really long line This is a really long line This is a really long line This is a really long line This is a really long line";

    hide nika;
    say "Hiding first sprite";

    show nika;
    say "Showing first sprite";

    emote nikab shy;
    say "Making second sprite shy";

    move nikab 800 200;
    say "Moving second sprite";

    goto second_scene;
}

scene second_scene "random texxt" {
    say "inside second scene";
    say "inside second scene again!";

    goto third_scene;
}

scene third_scene "based epic" {
    say "inside third scene";
    end;
}
